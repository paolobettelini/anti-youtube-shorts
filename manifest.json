{
    "manifest_version": 2,
    "name": "AntiYTShorts",
    "version": "1.0",

    "description": "Redirects Youtube Shorts to a normal page.",

    "icons": {
        "48": "icons/border-48.png",
        "96": "icons/border-96.png"
    },

    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/shorts/*"],
            "js": ["redirect.js"],
            "run_at": "document_start"
        }
    ]
}